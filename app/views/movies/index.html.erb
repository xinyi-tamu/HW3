<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>


<table>
  <thead>
    <tr>
      <th class="<%= params[:sort] == 'title' && params[:direction] == 'asc' ? 'highlight-asc' : params[:sort] == 'title' && params[:direction] == 'desc' ? 'highlight-desc' : '' %>">
        <%= link_to "Title", movies_path(sort: "title", direction: params[:sort] == "title" && params[:direction] == "asc" ? "desc" : "asc") %>
        <%= params[:sort] == 'title' ? (params[:direction] == 'asc' ? '↑' : '↓') : '' %>
      </th>
      <th class="<%= params[:sort] == 'rating' && params[:direction] == 'asc' ? 'highlight-asc' : params[:sort] == 'rating' && params[:direction] == 'desc' ? 'highlight-desc' : '' %>">
        <%= link_to "Rating", movies_path(sort: "rating", direction: params[:sort] == "rating" && params[:direction] == "asc" ? "desc" : "asc") %>
        <%= params[:sort] == 'rating' ? (params[:direction] == 'asc' ? '↑' : '↓') : '' %>
      </th>
      <th class="<%= params[:sort] == 'release_date' && params[:direction] == 'asc' ? 'highlight-asc' : params[:sort] == 'release_date' && params[:direction] == 'desc' ? 'highlight-desc' : '' %>">
        <%= link_to "Release Date", movies_path(sort: "release_date", direction: params[:sort] == "release_date" && params[:direction] == "asc" ? "desc" : "asc") %>
        <%= params[:sort] == 'release_date' ? (params[:direction] == 'asc' ? '↑' : '↓') : '' %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td class="<%= params[:sort] == 'title' && params[:direction] == 'asc' ? 'highlight-asc' : params[:sort] == 'title' && params[:direction] == 'desc' ? 'highlight-desc' : '' %>">
          
          <%= link_to movie.title.presence || "Untitled", movie_path(movie, sort: params[:sort], direction: params[:direction]) %>
        </td>
        <td class="<%= params[:sort] == 'rating' && params[:direction] == 'asc' ? 'highlight-asc' : params[:sort] == 'rating' && params[:direction] == 'desc' ? 'highlight-desc' : '' %>">
          <%= movie.rating %>
        </td>
        <td class="<%= params[:sort] == 'release_date' && params[:direction] == 'asc' ? 'highlight-asc' : params[:sort] == 'release_date' && params[:direction] == 'desc' ? 'highlight-desc' : '' %>">
          <%= movie.release_date ? movie.release_date.strftime("%Y-%m-%d") : 'N/A' %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New movie", new_movie_path(sort: params[:sort], direction: params[:direction]), class: "button" %> 
